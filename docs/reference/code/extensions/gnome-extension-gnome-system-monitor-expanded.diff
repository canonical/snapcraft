       - desktop-file-utils
       - docbook-to-man
       - libgtop2-dev
       - libsigc++-2.0-dev
       - libsystemd-dev
       - policykit-1
       - yelp-tools
     stage-packages:
       - libsigc++-2.0-0v5
     build-snaps:
       - gnome-46-2404-sdk/latest/candidate

